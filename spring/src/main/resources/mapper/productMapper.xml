<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaishengit.mapper.ProductMapper">

    <select id="findById" parameterType="int" resultType="Product">
        SELECT * FROM kaola WHERE id = #{id}
    </select>

    <select id="findAll" resultType="Product">
        SELECT * from kaola
    </select>

    <delete id="deleteById" parameterType="int">
        DELETE  FROM kaola where id = #{id}
    </delete>
    
    <update id="update" parameterType="Product">
        update kaola set product_name = #{productName},price=#{price},market_price=#{marketPrice},place=#{place},comment_num=#{commentNum},type_id=#{typeId}    where id = #{id} ;
    </update>


</mapper>